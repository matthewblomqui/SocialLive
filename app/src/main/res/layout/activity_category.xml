<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category">

    <!--Need to fix this, Screen doesn't properly animate -->
    <LinearLayout
        android:id="@+id/categoriesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000"
        android:elevation="30dp"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="139dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_gravity="center"
                android:background="#000"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/SmashBrosNight"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Smash Bros Night?" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />

                <ImageButton
                    android:id="@+id/SettlersOfCatan"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />

                <ImageButton
                    android:id="@+id/ChessNight"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />

                <ImageButton
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttonstyling"
            android:onClick="returnToFeedFromCategoriesPage"
            android:text="To Feed"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>