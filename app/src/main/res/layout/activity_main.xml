<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base_layout"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    tools:layout_editor_absoluteY="81dp">

    <!-- First screen contains a scroll view and a few buttons. -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="5dp">

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Smash Bros Night?"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/findEvent"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorAccent"
        android:onClick="launchFindEventWindow"
        android:text="Find Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/createEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.94" />

    <Button
        android:id="@+id/createEvent"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonstyling"
        android:textColor="@color/colorAccent"
        android:onClick="createEvent"
        android:text="Create Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/findEvent" />

    <!-- This is for the second screen -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/findEventWindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/findBoardGames"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="84dp"
            android:background="@color/colorPrimary"
            android:elevation="5dp"
            android:onClick="toBoardGameSuggestions"
            android:src="@drawable/download"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="269dp"
            android:layout_height="103dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="201dp"
            android:background="@color/colorPrimary"
            android:onClick="toVideoGameSuggestions"
            android:src="@drawable/findevent"
            app:layout_constraintBottom_toTopOf="@+id/findBoardGames"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/findBoardGames" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="5dp"
            android:elevation="8dp"
            android:background="#000"
            android:id="@+id/categoriesLayout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="#000">

                    <ImageButton
                        android:id="@+id/SmashBrosNight"
                        android:layout_width="300dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Smash Bros Night?"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        />

                    <ImageButton
                        android:id="@+id/SettlersOfCatan"
                        android:layout_width="300dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        />

                    <ImageButton
                        android:layout_width="300dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:id="@+id/ChessNight"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:layout_width="300dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </ScrollView>

            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:onClick="returnToFeedFromCategoriesPage"
                android:background="@drawable/buttonstyling"
                android:text="To Feed"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>